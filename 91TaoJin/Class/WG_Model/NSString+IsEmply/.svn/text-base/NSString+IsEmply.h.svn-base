@interface NSString (IsEmply)
/**
 *  判断NSString是否为空
 *
 */
+(BOOL)isEmply:(NSString *)str;

/**
 *  多行换行替换为空格
 *
 *  @param string       原文
 *
 */
+(NSString *)getFiltrationString:(NSString *)string;

/**
 *  处理文本有多个换行的显示
 *
 *  @param str 原文
 *
 */
+(NSString *)dealStringWithNewLine:(NSString *)str;

/**
 *  禁止输入Emoji表情符号
